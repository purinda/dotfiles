#!/bin/bash

~/Projects/phoenix/bin/aws-keys-sts.py;

aws s3 cp s3://kidspot-backup/db/mysql-latest.sql ~/Downloads/mysql-latest.sql;
aws s3 cp s3://kidspot-backup/db/redis-latest.rdb ~/Downloads/redis-latest.rdb;

echo "##### importing MySQL databases #####";
mysql -u phoenix -pphoenix -e "drop database if exists cms; create database if not exists cms";
mysql -u phoenix -pphoenix -e "drop database if exists recipes; create database if not exists recipes";
mysql -u phoenix -pphoenix < ~/Downloads/mysql-latest.sql;

echo "##### importing Redis backup #####";
sudo service redis-server stop;
sudo cp ~/Downloads/redis-latest.rdb /var/lib/redis/dump.rdb;
sudo chown redis: /var/lib/redis/dump.rdb;
sudo service redis-server start;
