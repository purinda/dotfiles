# Commented to support docker short hand aliases
alias s='sudo'
alias v='vim'
alias lsd='ll -d */'
alias h='history | grep $1'
alias q='exit'
alias shutdown='sudo shutdown -h now'
alias reboot='sudo reboot'

# Commented to support docker short hand aliases
alias g='git'
alias gs='git status'
alias ga='git add'
alias gci='git commit'
alias gc='git checkout'
alias gl='git lg'
alias gp='git push'
alias gd='git diff'
alias gcv='git commit -v'
alias v="vim"
alias vr="vim -R"
alias sv="sudo vim"
alias tree='tree -C'
alias sg='grep -HIrin --colour=always' 
alias d='docker-machine'
alias dstart='docker-machine start'
alias dstop='docker-machine stop'
alias denv=composeEnv
alias c=docker-compose
alias cup='docker-compose up -d'
alias cdown='docker-compose down'
alias cexec='docker-compose exec'

# run commands as Apache user (www-data)
alias as-apache='sudo -u www-data'

alias la='ls -A'
alias l='ls -CF'

# Composer
alias composer='composer -vvv --profile'

#
# Command aliases
#

# use htop instead of top if htop is installed
if hash htop 2>/dev/null; then
    alias top='htop'
elif hash htop-macosx 2>/dev/null; then
    alias top='htop-macosx'
fi

# use ggrep if installed on OSX instead of BSD grep
if hash ggrep 2>/dev/null; then
    alias grep='ggrep'
fi

# OS specific aliases
if [ "$(uname)" == "Darwin" ]; then

    alias ll='ls -lhFG'
    alias all='ls -AlhiFG'

elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then

    alias ll='ls -lhF --color'
    alias all='ls -AlhiF --color'

fi

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Docker machine start and config
alias dmenv='setup_dockermachine $1'
