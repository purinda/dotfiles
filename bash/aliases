# rDesktop 
alias rd="rdesktop -zN -g1368x720"


#
# Command aliases
#

# use htop instead of top if htop is installed
if hash htop 2>/dev/null; then
    alias top='htop'
elif hash htop-macosx 2>/dev/null; then
    alias top='htop-macosx'
fi

# Composer
alias composer='composer -vvv --profile'

